
@{
    ViewBag.Title = "Edit Project";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="margin-top:60px">Edit Project</h2>
<div class="container">
    <form class="form-horizontal">
        <div class="form-group">
            <label for="email" class="col-sm-3 control-label">Name</label>
            <div class="col-sm-6">
                <input type="email" name="Pname" placeholder="Project Name" class="form-control input-register" value="@ViewBag.NomeProjeto" maxlength="50">
            </div>
        </div>
        <div class="form-group">
            <label for="email" class="col-sm-3 control-label">Advisor</label>
            <div class="col-sm-6">
                <input type="email" name="Advisor" placeholder="Advisor" class="form-control input-register" value="@ViewBag.NomeOrientador.Nome" disabled maxlength="50">
            </div>
        </div>
        <div class="form-group">
            <label for="email" class="col-sm-3 control-label">Co-Advisor</label>
            <div class="col-sm-6">
                <input type="email" name="Coadvisor" placeholder="Co-Advisor" value="@ViewBag.NomeCoorientador.Nome" disabled class="form-control input-register" maxlength="50">
            </div>
        </div>
        <div class="form-group">
            @if (ViewBag.Tipo == 1)
            {
                <label>Type</label>
                <div class="form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" type="radio" name="Tipo" id="gridRadios1" value="1" checked>
                        TCC
                    </label>
                </div>
                <div class="form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" type="radio" name="Tipo" id="gridRadios2" value="2">
                        Scientific Research
                    </label>
                </div>
            }
            else if (ViewBag.Tipo == 2)
            {
                <label>Type</label>
                <div class="form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" type="radio" name="Tipo" id="gridRadios1" value="1">
                        TCC
                    </label>
                </div>
                <div class="form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" type="radio" name="Tipo" id="gridRadios2" value="2" checked>
                        Scientific Research
                    </label>
                </div>
            }
        </div>

        <div>
            <textarea class="form-control " name="Descricao" placeholder="Description..." value="@ViewBag.Descricao" rows="4"></textarea>
        </div>



        <div style="margin:60px">
            <a href="/user/create" class="form-control btn btn-success"><i class="fa fa-user-plus" aria-hidden="true"></i> Add User</a>

            <table class="table table-bordered">
                <tr>
                    <th>#</th>
                    <th>NAME</th>
                    <th>E-MAIL</th>
                    <th>STATUS</th>
                    <th>OPTIONS</th>
                </tr>

                <tr>
                    <td>1</td>
                    <td>Student</td>
                    <td>student@email.com</td>
                    <td>Student</td>
                    <td>
                        <button type="button" class="btn btn-danger btn-sm" data-toggle="modal" data-target="#confirmDelUser"><i class="fa fa-trash-o" aria-hidden="true"></i> Delete</button>
                    </td>
            </table>
            <a href="/user/create" class="form-control btn btn-success"><i class="glyphicon glyphicon-book" aria-hidden="true"></i> Add Reference</a>
            <table class="table table-bordered">
                <tr>
                    <th>#</th>
                    <th>REFERENCES</th>
                    <th>OPTIONS</th>

                </tr>

                <tr>
                    <td>1</td>
                    <td>TANENBAUM, Andrew. Sistemas operacionais modernos. 3 ed. São Paulo: São Paulo, 2009.</td>

                    <td>
                        <button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#confirmDelUser"><i class="fa fa-pencil" aria-hidden="true"></i> Edit</button>
                        <button type="button" class="btn btn-danger btn-sm" data-toggle="modal" data-target="#confirmDelUser"><i class="fa fa-trash-o" aria-hidden="true"></i> Delete</button>
                    </td>
            </table>

            <div class="row" style="height:50px; margin-top:35px">
                <input type="file" class="file">
                <div class="input-group col-xs-6">
                    <input type="text" class="form-control input-lg" id="btnFile" disabled placeholder="Upload file...">
                    <span class="input-group-btn">
                        <button class="browse btn btn-default input-lg" style="font-size:18px;" type="button"><i class="glyphicon glyphicon-search"></i> Browse</button>
                    </span>
                </div>
                <a class="btn btn-default btn-lg pull-right btnProject" href="#"><span class="glyphicon glyphicon-check"></span> Save Changes</a>
            </div>
        </div>

    </form>
</div>



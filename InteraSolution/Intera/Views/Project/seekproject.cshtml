@model IEnumerable<Intera.Entity.Projeto>
@{
    ViewBag.Title = "Projects";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div style="margin-top:60px" class="container div-Projetos">
    <div class="row">
        <div id="filter-panel" class="filter-panel">
            <div class="panel panel-default">
                <div class="panel-body text-center">
                    <form action="/project/seekproject" method="post" class="form-inline" role="form">
                        <div class="form-group">
                            <label class="filter-col" style="margin-right:0;" for="pref-perpage">Professor:</label>
                            <select id="pref-perpage" class="form-control" name="Professor">
                                <option selected="selected"></option>
                                @foreach (var u in ViewBag.Professor)
                                {
                                    <option value=@u.IdPessoa>@u.Nome</option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label class="filter-col" style="margin-left:15px;" for="pref-search">Título do Projeto:</label>
                            <input type="text" class="form-control input-sm-" id="pref-search" name="NameProject">
                        </div>
                        <div class="form-group">
                            <label class="filter-col" style="margin-left:10px" for="pref-perpage">Situação:</label>
                            <select id="pref-perpage" class="form-control" name="Status">
                                <option selected="selected"></option>
                                <option value=1>Em progresso</option>
                                <option value=2>Finalizado</option>

                            </select>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-default filter-col top-right">
                                <span class="glyphicon glyphicon-ok-sign"></span> Salvar Opções
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <button type="button" class="btn btn-default" data-target="#filter-panel">
            <span class="glyphicon glyphicon-search"></span> Pesquisar
        </button>
    </div>
</div>
@foreach (var t in Model)
{
    <div id="tudo" class="row pull-right">
        <ul class="media-list main-list">
            <li class="media">
                <a class="pull-left" href="/Project/seeproject/@t.IdProjeto">
                    <img class="media-object" src="~/Imagens/projects.PNG" style="height:120px;width:120px;margin-right:30px">
                </a>
                <form action="/Project/seeproject/@t.IdProjeto" class="form-inline">
                    <div id="tudo2">
                        <button type="submit" class="btn btn-default">
                            <i class="glyphicon glyphicon-eye-open"></i> Visualizar
                        </button>
                    </div>

                    <div id="tudo3" class="div-btnDownload">
                        <button type="button" class="btn btn-default">
                            <i class="glyphicon glyphicon-save"></i> Download
                        </button>
                    </div>
                </form>
                <div class="media-body panel panel-default proj-panel">
                    <div class="panel-heading proj-panel1">
                        <strong class="media-heading nome-proj">@t.NomeProjeto</strong>
                    </div>
                    <div class="panel-body">
                        <p class="by-author">Grande Área</p>
                         
                        <p class="by-author">Curso</p>
                        
                        <p class="by-author">Co-Orientador</p>

                        <p class="by-author">Metodologia de trabalho</p>

                        <p class="by-author">Resultados Esperados</p>

                        <p class="by-author">Website do Projeto</p>

                        <p class="by-author">Facebook do Projeto</p>

                        <p class="by-author">E-mail de contato do Projeto</p>

                        <p class="by-author">@t.Descricao</p>


                        @if (@t.Status == 1)
                        {
                            <p class="by-author">Em progresso</p>
                        }
                        @if (@t.Status == 2)
                        {
                            <p class="by-author">Finalizado</p>
                        }

                    </div>
                </div>
            </li>
        </ul>
        
    </div>

}



@model IEnumerable<Intera.Entity.Professor>
@{
    ViewBag.Title = "Create Step One";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="div-criarProj1">
    <h2 >Criando novo projeto - Passo 1</h2>
    @if (ViewBag.MensagemCoorientador != null)
    {
        <div class="alert alert-danger" role="alert">
            @ViewBag.MensagemCoorientador
        </div>
    }

    <form role="form" action="/project/createstep1" method="post" enctype="multipart/form-data">
        <div class="div-criarProj1Campos">

            <div class="form-group">
                <label class="filter-col" for="pref-perpage">Nome do Projeto:</label>
                <input type="text" class="form-control" id="name" name="NomeProjeto" placeholder="Nome do Projeto" required>
            </div>

            <div class="form-group ">
                <label class="filter-col" for="pref-perpage">Co-Orientador:</label>
                <select class="form-control tm-input" name="IdCoorientador" >
                    <option value="0"></option>
                    @foreach (var prof in Model)
                    {
                        <option value="@prof.IdPessoa">@prof.Rs - @prof.Nome</option>
                    }
                </select>
            </div>
            <div class="form-group div-tipos">
                <label>Tipo</label>
                <div class="form-check">

                    <label class="form-check-label">
                        <input class="form-check-input" type="radio" name="Tipo" id="gridRadios1" value="1" checked>
                        Trabalho de Conclusão de Curso
                    </label>
                </div>
                <div class="form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" type="radio" name="Tipo" id="gridRadios2" value="2">
                        Iniciação Científica
                    </label>
                </div>
            </div>

            <div class="div-textArea">
                <label class="filter-col" for="pref-perpage">Descrição:</label>
                <textarea class="form-control " name="Descricao" placeholder="Breve descrição..." rows="4"></textarea>
            </div>

            <button type="submit" class="btn btn-default  btn-lg pull-right">Próximo <i class="fa fa-arrow-right"></i></button>
        </div>
    </form>
</div>


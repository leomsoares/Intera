
@{
    ViewBag.Title = "createstep1";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="margin-top:60px;">
    <h2>Create New Project - Step 1</h2>
    <div class="container">
        <form action="/project/createstep1" method="post">
            <div class="divProject">
                <label>Project Title</label>
                <input type="text" class="form-control inputProject">
            </div>

            <div class="divProject">
                <label>Advisor</label>
                <input type="text" class="form-control inputProject" style="margin-left:27px;">
            </div>

            <div class="divProject">
                <label>Co-Advisor</label>
                <input type="text" class="form-control inputProject" style="margin-left:27px;">
            </div>

            <div class="divProject">
                <div class="form-check">
                    <label>Type</label>
                    <label class="form-check-label">
                        <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios1" value="option1" checked>
                        TCC
                    </label>
                </div>
                <div class="form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios2" value="option2">
                        Scientific Research
                    </label>
                </div>
            </div>
        </form>

        <div>
            <label>Description</label>
            <textarea class="form-control textareaProject" placeholder="Short description..." rows="2"></textarea>
        </div>
        <a class="btn btn-default btn-lg pull-right btnProject" href="/project/createstep2"><i class="fa fa-arrow-right"></i> Next</a>
    </div>
</div>


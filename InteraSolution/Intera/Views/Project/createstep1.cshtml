
@{
    ViewBag.Title = "Create Step One";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="margin-top:60px;">
    <h2>Create New Project - Step 1</h2>
    <div class="container">
        <form action="/project/createstep1" method="post">
            <div class="divProject">
                <label>Project Title</label>
                <input type="text" name="NomeProjeto" class="form-control inputProject">
            </div>

            <div class="divProject">
                <label>Co-Advisor</label>
                <input type="text" name="IdCoorientador" class="form-control inputProject" style="margin-left:27px;">
            </div>

            <div class="divProject">
                <div class="form-check">
                    <label>Type</label>
                    <label class="form-check-label">
                        <input class="form-check-input" type="radio" name="Tipo" id="gridRadios1" value="1" checked>
                        TCC
                    </label>
                </div>
                <div class="form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" type="radio" name="Tipo" id="gridRadios2" value="2">
                        Scientific Research
                    </label>
                </div>
            </div>
            <div>
                <input type="date" name="name" />
                <label>Description</label>
                <textarea class="form-control textareaProject" name="Descricao" placeholder="Short description..." rows="2"></textarea>
            </div>
            <button type="submit" class="btn btn-default btn-lg pull-right"><i class="fa fa-arrow-right"></i> Next</button>
        </form>
    </div>
</div>


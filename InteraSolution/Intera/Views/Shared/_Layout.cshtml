<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Style.css" rel="stylesheet"/>
</head>
<body>

    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header" >
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/default/index">INTERA</a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li class="active">
                    <li><a href="/default/adicionarprojeto">Adicionar Projeto</a></li>
                    <li><a href="/default/projetos">Projetos</a></li>
                    <li><a href="/default/iniciacaocientifica">Iniciação Científica</a></li>
                    <li><a href="/default/Professores">Professores</a></li>
                    <li><a href="/default/grupo">Meu Grupo</a></li>
                </ul>

                <ul class="nav navbar-nav navbar-right">
                    <form class="navbar-form navbar-left" role="search" >
                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="digite aqui...">
                        </div>
                        <button type="submit" class="btn btn-default">Pesquisar</button>
                    </form>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Login<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="/default/perfil">Meu Perfil</a></li>

                            <li><a href="#">Status</a></li>
                            <li><a href="/default/criarprojeto">Criar Projeto</a></li>
                            <li role="separator" class="divider"></li>
                            <li><a href="#">Sair</a></li>
                        </ul>
                    </li>
                </ul>
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
    </nav>

    <div class="container">
        @RenderBody()
    </div>
    <div class="container">
        <div class="row">
            <hr>
            <div class="col-lg-12">
                <div class="col-md-8">
                    <a href="#">Termos de Serviço</a> | <a href="#">Contato</a>
                </div>
                <div class="col-md-4">
                    <p class="muted pull-right">© 2016 INTERA. All rights reserved</p>
                </div>
            </div>
        </div>
    </div>

    <script src="~/Scripts/jquery-1.9.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>
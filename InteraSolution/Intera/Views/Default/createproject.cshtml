
@{
    ViewBag.Title = "createproject";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create New Project</h2>

<div class="container-fluid" style="margin-top: 50px">
    <div class="row">
        <div class="media-left">
            <div class="form-group row">
                <label>Initial Date</label>
                <div class="input-group">
                    <input class="form-control" type="date" value="2016-09-21" id="example-date-input">
                </div>

                <br/>
                
                <label for="basic-url">Project Title</label>
                <div class="input-group">
                    <span @*class="input-group-addon" id="basic-addon3"*@></span>
                    <input type="text" class="form-control" id="basic-url" aria-describedby="basic-addon3">
                </div>
                
                <br/>

                <div>
                    <fieldset class="input-group">
                        <div>
                            <div class="form-check">
                                <label class="form-check-label">
                                    <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios1" value="option1" checked>
                                    TCC
                                </label>
                            </div>

                            <div class="form-check">
                                <label class="form-check-label">
                                    <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios2" value="option2">
                                    Scientific Research
                                </label>
                            </div>
                        </div>
                    </fieldset>
                </div>
            </div>

            <div class="container">
                <h2>Group Members</h2>

                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Studant</th>
                            <th>Function</th>
                            <th>Email</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Student1</td>
                            <td>Documentation</td>
                            <td>student1@example.com</td>
                        </tr>
                        <tr>
                            <td>Student2</td>
                            <td>Programation</td>
                            <td>student2@example.com</td>
                        </tr>
                        <tr>
                            <td>Student3</td>
                            <td>Database</td>
                            <td>student3@example.com</td>
                        </tr>
                    </tbody>
                   
                </table>
                <a id="btnAdd" class="btn btn-default" href="#">
                    <spam class="glyphicon glyphicon-plus"></spam>
                    Add Member
                </a>
                <a id="btnEdit" class="btn btn-default" href="#">
                    <spam class="glyphicon glyphicon-edit"></spam> Edit
                </a>
                <a id="btnDel" class="btn btn-default" href="#">
                    <spam class="glyphicon glyphicon-trash"></spam> Delete
                </a>
                <a id="btnConfirm" class="btn btn-default" href="#">
                    <spam class="glyphicon glyphicon-ok"></spam>
                    Create Project
                </a>
              
            </div>
        </div>
    </div>
</div>

@model IEnumerable<Intera.Entity.Aluno>

@{
    ViewBag.Title = "editmembers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-top: 80px;">
    <div class="row">
        <input type="text" class="form-control input-search" placeholder="search...">
        <button class="form-control btn btn-default button-search" type="submit">
            <span class="glyphicon glyphicon-search">  </span>
        </button>
    </div>

    <br />
    <div style="display:inline-block">
        <ul>
            <li>
                <input type="checkbox" id="sem1" />
                <label for="sem1"> 1º Semester</label>
                <br />
                <input type="checkbox" id="sem2" />
                <label for="sem2"> 2º Semester</label>
                <br />
                <input type="checkbox" id="sem3" />
                <label for="sem3"> 3º Semester</label>
                <br />
                <input type="checkbox" id="sem4" />
                <label for="sem4"> 4º Semester</label>
            </li>
        </ul>
    </div>
    <div style="display:inline-block">
        <ul>
            <li>
                <input type="checkbox"/>
                <label> ADS</label>
                <br />
                <input type="checkbox" id="agro1" />
                <label for="agro1"> Agronegócio</label>
                <br />
                <input type="checkbox" id="info1" />
                <label for="info1"> Info</label>
                <br />
                <input type="checkbox" id="gest1" />
                <label for="gest1"> G. Empresarial</label>
            </li>
        </ul>
    </div>
    <div style="display:inline-block;">
        <ul>
            <li>
                <input type="checkbox" id="prof1" />
                <label for="prof1"> Professor</label>
                <br />
                <input type="checkbox" id="student1" />
                <label for="student1"> Student</label>
            </li>
        </ul>
    </div>

    <hr class="hrProject" />

    <h2>Registered Members</h2>

    <table class="table table-hover">
        <tr>
            <th>Name</th>
            <th>RA/RS</th>
            <th>Studying</th>
            <th>Semester</th>
        </tr>
        @foreach (var a in Model)
        { 
            <tr>

                <td>@a.Nome</td>
                <td>@a.Ra</td>
                <td>@a.Curso</td>

                <td>
                    <div class="btn-group">
                        <a href="/tarefa/update/@a.Ra" class="btn btn-xs btn-primary"><span class="glyphicon glyphicon-edit"></span> Editar</a>
                        <a href="/tarefa/update/@a.Ra" class="btn btn-xs btn-danger"><span class="glyphicon glyphicon-trash"></span> Apagar</a>
                    </div>
                </td>
            </tr>
        }
    </table>



</div>

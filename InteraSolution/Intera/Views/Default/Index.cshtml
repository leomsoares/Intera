@model IEnumerable<Intera.Entity.Projeto>
@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="jumbotron">
    <h1>INTERA Project</h1>
    <p>
        The web design application Intera's main function is to aid the development of projects for completion of the course and scientific initiations. Having focused on the interaction between the teacher and the student who perform their development.
        The completion of course work that are in the college library will have a better use, ie, will be available online for viewing and download.
    </p>
    <p><a class="btn btn-danger btn-lg" href="/default/about" role="button">More</a></p>
</div>
<h2>Last Add Projects</h2>
<div class="conteudo">
    <div class="row">
        @foreach (var item in Model)
        {


            <div class="col-sm-6 col-md-4">
                <div class="thumbnail teste-shadow">
                    <img src="~/Imagens/INTERA.jpg" alt="logo">
                    <div class="caption">
                        <h3>@item.NomeProjeto</h3>
                        <p>@item.Link</p>
                        <p>@item.Descricao</p>
                        <p>
                            <a href="/Project/seeproject/@item.IdProjeto" class="btn btn-danger" role="button"><i class="glyphicon glyphicon-eye-open"></i> View</a>
                            <a href="#" class="btn btn-default" role="button"><i class="glyphicon glyphicon-circle-arrow-down"></i> Download</a>
                        </p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@{
    ViewBag.Title = "Update Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="margin-top:60px">Update User</h2>
<div class="container">
    <form class="form-horizontal" action="/user/update/@ViewBag.IdPessoa" method="post">

        <div class="form-group">
            <label for="firstName" class="col-sm-3 control-label">Full Name</label>
            <div class="col-sm-6">
                <input type="text" name="Nome" placeholder="Full Name" class="form-control input-register" value="@ViewBag.Nome" maxlength="50" autofocus>
            </div>
        </div>
        <div class="form-group">
            <label for="email" class="col-sm-3 control-label">Email</label>
            <div class="col-sm-6">
                <input type="email" name="Email" placeholder="Email" class="form-control input-register" value="@ViewBag.Email" maxlength="50">
            </div>
        </div>
        <div class="form-group">
            <label for="firstName" class="col-sm-3 control-label">RA / RS</label>
            <div class="col-sm-6">
                <input type="text" name="RaRs" placeholder="ex: 1210481512033" class="form-control input-register" value="@ViewBag.RaRs" maxlength="15" autofocus>
            </div>
        </div>
        
        @if (ViewBag.Status == 1)
        {
            <div class="form-group">
                <label for="firstName" class="col-sm-3 control-label">Curso</label>
                <div class="col-sm-6">
                    <input type="text" name="Curso" placeholder="ex: ADS" class="form-control input-register" value="@ViewBag.Curso" maxlength="50" autofocus>
                </div>
            </div>
        }
        <div class="form-group">
            <label for="password" class="col-sm-3 control-label">Password</label>
            <div class="col-sm-6">
                <input type="password" name="Senha" placeholder="Password" class="form-control input-register" value="@ViewBag.Senha" maxlength="20">
            </div>
        </div>

        @if (ViewBag.Status == 1)
        {
            <div class="form-group" style="visibility: hidden">
                <label class="control-label col-sm-3">Type</label>
                <div class="col-sm-6">
                    <div class="row">
                        <div class="col-sm-4">
                            <label class="radio-inline">
                                <input type="radio" name="Type" value="1" checked>Student
                            </label>
                        </div>

                        <div class="col-sm-4">
                            <label class="radio-inline">
                                <input type="radio" name="Type" value="2">Professor
                            </label>
                        </div>
                    </div>
                </div>
            </div>
        }
        else if (ViewBag.Status == 2)
        {
            <div class="form-group" style="visibility: hidden">
                <label class="control-label col-sm-3">Type</label>
                <div class="col-sm-6">
                    <div class="row">
                        <div class="col-sm-4">
                            <label class="radio-inline">
                                <input type="radio" name="Type" value="1">Student
                            </label>
                        </div>

                        <div class="col-sm-4">
                            <label class="radio-inline">
                                <input type="radio" name="Type" value="2" checked>Professor
                            </label>
                        </div>
                    </div>
                </div>
            </div>
        }

        <div class="form-group">
            <div class="container col-sm-3 col-sm-offset-4">
                <button type="submit" class="btn btn-default btn-block">Salvar</button>
            </div>
        </div>
    </form>
</div>

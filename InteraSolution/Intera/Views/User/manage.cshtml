@model IEnumerable<Intera.Entity.Pessoa>
@{
    ViewBag.Title = "Manage Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div style="margin-top:60px;">
    <h2>Manage Users</h2>
    <div class="container">
        <div class="row">
            <form action="/user/manage" method="post">
                <div class="col-md-12">
                    <div id="custom-search-input">
                        <div class="input-group col-md-12">
                            <input type="text" name="Search" class="form-control input-lg" placeholder="Search for Name..." />
                            <span class="input-group-btn">
                                <button class="btn btn-default btn-lg" type="submit">
                                    <i class="glyphicon glyphicon-search"></i>
                                </button>
                            </span>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>


</div>
<div style="margin:60px">
    @*<a href="/user/create" class="form-control btn btn-success"><i class="fa fa-user-plus" aria-hidden="true"></i> Add User</a>*@
    
    @*<div class="col-sm-6">*@
        <button type="button" class="form-control btn btn-success" data-toggle="modal" data-target="#createUser">
            <i class="fa fa-user-plus" aria-hidden="true"></i> Add User
        </button>
    @*</div>*@
    <!-- Modal -->
    <div class="modal fade" id="createUser" tabindex="-1" role="dialog" aria-labelledby="createUserLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="createUserLabel">Create User</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <form class="form-horizontal" action="/user/create" method="post">

                            <div class="form-group">
                                <label for="firstName" class="col-sm-3 control-label">Full Name</label>
                                <div class="col-sm-6">
                                    <input type="text" name="Nome" placeholder="Full Name" class="form-control input-register" maxlength="50" autofocus>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="email" class="col-sm-3 control-label">Email</label>
                                <div class="col-sm-6">
                                    <input type="email" name="Email" placeholder="Email" class="form-control input-register" maxlength="50">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="firstName" class="col-sm-3 control-label">RA / RS</label>
                                <div class="col-sm-6">
                                    <input type="text" name="RaRs" placeholder="ex: 1210481512033" class="form-control input-register" maxlength="15" autofocus>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="firstName" class="col-sm-3 control-label">Curso</label>
                                <div class="col-sm-6">
                                    <input type="text" name="Curso" placeholder="ex: ADS" class="form-control input-register" maxlength="50" autofocus>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="password" class="col-sm-3 control-label">Password</label>
                                <div class="col-sm-6">
                                    <input type="password" name="Senha" placeholder="Password" class="form-control input-register" maxlength="20">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-sm-3">Type</label>
                                <div class="col-sm-6">
                                    <div class="row">
                                        <div class="col-sm-4">
                                            <label class="radio-inline">
                                                <input type="radio" name="Type" value="1" checked>Student
                                            </label>
                                        </div>

                                        <div class="col-sm-4">
                                            <label class="radio-inline">
                                                <input type="radio" name="Type" value="2">Professor
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="container col-sm-2 col-sm-offset-5">
                                    <button type="submit" class="btn btn-default btn-block"> Register</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>NAME</th>
            <th>E-MAIL</th>
            <th>STATUS</th>
            <th>OPTIONS</th>
        </tr>
        @foreach (var t in Model)
            {
            <tr>
                <td>@t.IdPessoa</td>
                <td>@t.Nome</td>
                <td>@t.Email</td>
                @if (t.Status == 1)
                {
                    <td>Aluno</td>
                }
                else if (t.Status == 2)
                {
                    <td>Professor</td>
                }
                <td>
                    <a href="/user/view/@t.IdPessoa" class="btn btn-default btn-sm"><i class="fa fa-eye" aria-hidden="true"></i> View</a>
                    <a href="/user/update/@t.IdPessoa" class="btn btn-primary btn-sm"><i class="fa fa-pencil" aria-hidden="true"></i> Edit</a>
                    @*<a href="/user/delete/@t.IdPessoa" class="btn btn-danger btn-sm"><i class="fa fa-trash-o" aria-hidden="true"></i> Delete</a>*@
                    <button type="button" class="btn btn-danger btn-sm" data-toggle="modal" data-target="#confirmDelUser"><i class="fa fa-trash-o" aria-hidden="true"></i> Delete</button>

                    <!-- Modal -->
                    <div class="modal fade" id="confirmDelUser" tabindex="-1" role="dialog" aria-labelledby="confirmDelUserLabel">
                        <div class="modal-dialog modal-sm" role="document">
                            <div class="modal-content modal-sm">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                    <h4 class="modal-title" id="confirmDelUser"> Confirm Deletion</h4>
                                </div>
                                <div class="modal-body">
                                    <p> Are you sure you want to delete?</p>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-default btn-sm" data-dismiss="modal"> Cancel</button>
                                    <a href="/user/delete/@t.IdPessoa" class="btn btn-danger btn-sm"><i class="fa fa-trash-o" aria-hidden="true"></i> Delete</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </td>
            </tr>
        }
    </table>
</div>
